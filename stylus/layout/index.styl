//Add layout rules here
@import 'nib';

.wrapper
  padding: 2%
  padding-top: 0
  margin-left: 8%
  margin-right: 8%
  margin-bottom: 2%
  clearfix()

//Mixins
indent(n)
  margin-left: n

//Classes
.text-center
  text-align: center

.margin-center
  margin-left: auto
  margin-right: auto

.relative
  display relative
  
.column
  display: block
  float: left
  position: relative
  box-sizing: border-box
  margin-top: 5px
  margin-bottom: 5px
  margin-left: 1%
  margin-right: 1%
  padding: 8px
  
.column-1-1
  @extend .column
  width: 98%
  
.column-1-2
  @extend .column
  width: 48%

.column-2-2
  @extend .column
  width: 48%

.column-1-3
  @extend .column
  width: 31.3%

.column-2-3
  @extend .column
  width: 31.3%

.column-3-3
  @extend .column
  width: 31.3%
  
.text-center
  text-align: center